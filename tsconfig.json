{
    "extends": "./tsconfig.node.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [ "ESNext", "DOM" ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [ "node" ],
        "baseUrl": ".",
        "paths": {
            "@scrt/*": [ "ts/*" ]
        }
    },
    "include": [
        "src/**/*.ts",
        "examples/**/*.ts",
        "ts/**/*.ts",
        "vite.config.ts"
    ]
}
